@model WebApp.Models.Category


@Html.Partial("_Header")

<form method="get" asp-controller="Category" asp-action="UpdateCategorySave">
    <div>
        <h1 style="text-align:center;">Update Category</h1>
        <table style="text-align:left;">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td><div style="font-weight:bold;">Category ID:</div></td>
                            <td><input type="text" id="ID" name="ID" value="@Model.Category_ID" readonly /></td>
                            <td id="errID" style="color:red; font-weight:bold;"></td>
                        </tr>
                        <tr>
                            <td><div style="font-weight:bold;">Category Name:</div></td>
                            <td><input type="text" id="Name" name="Name" value="@Model.Category_Name" /></td>
                            <td id="errName" style="color:red; font-weight:bold;"></td>
                        </tr>
                        <tr>
                            <td><div style="font-weight:bold;">Category Description:</div></td>
                            <td><input type="text" id="Description" name="Description" value="@Model.Category_Description" /></td>
                            <td id="errDescription" style="color:red; font-weight:bold;"></td>
                        </tr>
                    </table>
                    <div style="padding-left:170px; padding-top:50px;"><input type="submit" value="Update" onclick="return Validation()"/></div>
                </td>
                <td>
                    <div style="padding-left:100px; width:100px;">
                        <img src="@Model.ImagePath" />
                    </div>
                </td>
            </tr>
        </table>
        
    </div>
</form>

<script type="text/javascript">
    function Validation() 
    {
        txtName = document.getElementById("Name").value;
        txtDescription = document.getElementById("Description").value;
        if(txtName == "")
        {
            document.getElementById("errName").innerHTML = "Required field!";
        }
        else
        {
            document.getElementById("errName").innerHTML = "";
        }

        if (txtDescription == "") 
        {
            document.getElementById("errDescription").innerHTML = "Required field!";
        }
        else 
        {
            document.getElementById("errDescription").innerHTML = "";
        }
        if (txtName == "" || txtDescription == "")
        {
            return false;
        }
        return true;
    }
</script>



@Html.Partial("_Footer")